/* 
CREATING BRONZE TABLES IN BRONZE SCHEMA - DDL SCRIPT
*/

IF OBJECT_ID('bronze.crm_cust_info','U') IS NOT NULL
BEGIN
DROP TABLE bronze.crm_cust_info;
END

CREATE TABLE bronze.crm_cust_info (
    cst_id INT,
    cst_key NVARCHAR(50),
    cst_firstname NVARCHAR(50),
    cst_lastname NVARCHAR(50),
    cst_material_status NVARCHAR(50),
    cst_gndr NVARCHAR(50),
    cst_create_date DATE
);
IF OBJECT_ID('bronze.crm_prd_info','U') IS NOT NULL
BEGIN
DROP TABLE bronze.crm_prd_info;
END
CREATE TABLE bronze.crm_prd_info (
    prd_id INT,
    prd_key NVARCHAR(50),
    prd_nm NVARCHAR(50),
    prd_cost INT,
    prd_line NVARCHAR(50),
    prd_start_dt DATETIME,
    prd_end_dt DATETIME
);
IF OBJECT_ID('bronze.crm_sales_details','U') IS NOT NULL
BEGIN
DROP TABLE bronze.crm_sales_details;
END

CREATE TABLE bronze.crm_sales_details (
    sls_ord_num NVARCHAR(50),
    sls_prd_key NVARCHAR(50),
    sls_cust_id INT,
    sls_order_dt INT,
    sls_ship_dt INT,
    sls_due_dt INT,
    sls_sales INT,
    sls_quantity INT,
    sls_price INT
);

CREATE TABLE bronze.erp_loc_a101 (
    cid NVARCHAR(50),
    cntry NVARCHAR(50)
);

CREATE TABLE bronze.erp_cust_az12 (
    cid NVARCHAR(50),
    bdate DATE,
    gen NVARCHAR(50)
);

CREATE TABLE bronze.erp_px_cat_g1v2 (
    id NVARCHAR(50),
    cat NVARCHAR(50),
    subcat NVARCHAR(50),
    maintenance NVARCHAR(50)
);


--load tables--
--crm file loading--
CREATE OR ALTER PROCEDURE bronze.load_bronze AS
BEGIN
truncate table bronze.crm_cust_info;
bulk insert bronze.crm_cust_info
from 'C:\Users\LENOVO\Downloads\datawarehouse csv crm table files\cust_info.csv'
with
(
firstrow=2,
fieldterminator=',',
tablock
);

truncate table bronze.crm_prd_info;
bulk insert bronze.crm_prd_info
from 'C:\Users\LENOVO\Downloads\datawarehouse csv crm table files\prd_info.csv'
with
(
firstrow=2,
fieldterminator=',',
tablock
);
select * from bronze.crm_prd_info

truncate table bronze.crm_sales_details;
bulk insert bronze.crm_sales_details
from 'C:\Users\LENOVO\Downloads\datawarehouse csv crm table files\sales_details.csv'
with
(
firstrow=2,
fieldterminator=',',
tablock
);
select * from bronze.crm_sales_details

---erp loading---

truncate table bronze.erp_cust_az12;
bulk insert bronze.erp_cust_az12
from 'C:\Users\LENOVO\Downloads\datawarehouse csv erp table files\CUST_AZ12.csv'
with
(
firstrow=2,
fieldterminator=',',
tablock
);
select * from bronze.erp_cust_az12


truncate table bronze.erp_loc_a101;
bulk insert bronze.erp_loc_a101
from 'C:\Users\LENOVO\Downloads\datawarehouse csv erp table files\loc_a101.csv'
with
(
firstrow=2,
fieldterminator=',',
tablock
);
select * from bronze.erp_loc_a101

truncate table bronze.erp_px_cat_g1v2;
bulk insert bronze.erp_px_cat_g1v2
from 'C:\Users\LENOVO\Downloads\datawarehouse csv erp table files\px_cat_g1v2.csv'
with
(
firstrow=2,
fieldterminator=',',
tablock
);
select * from bronze.erp_px_cat_g1v2
END
